{%- liquid
  assign md = 12.0 | divided_by : section.settings.items_per_row_on_desktop
-%}
<div class="section color-{{- section.settings.color_scheme }} {{ section.settings.remove_padding_top | replace: 'true', 'section-top-zero' | replace: section.settings.remove_padding_top, '' }} {{ section.settings.remove_padding_bottom | replace: 'true', 'section-bottom-zero' | replace: section.settings.remove_padding_bottom, '' }} {% render 'animation-loader', section: section %}" data-ui-component="Image With Text Columns Section" role="region" aria-labelledby="sectionHeading-{{ section.id | md5 | truncate: 12, "" }}">
  <div class="ctnr {{ section.settings.content_alignment }}">
    {% render 'section-header',
      content_align: section.settings.content_alignment,
      subheading: section.settings.subheading,
      heading: section.settings.heading,
      description: section.settings.description,
      badge_text: section.settings.badge_text,
      badge_position: section.settings.badge_position,
      badge_shape: section.settings.badge_shape,
      badge_color: section.settings.badge_color,
      section: section
    %}
    <div class="s-content">
      <sht-carousel-wrapper class="carousel-wrapper" data-on-mobile-only="{{ section.settings.enable_carousel }}" data-css-class-on-container="carousel d-flex p-zero m-zero ox-auto p-relative disable-scrollbars fw-nowrap scrollable scrollable-x" data-css-class-on-item="carousel__item p-relative scrollable-aln-start d-flex middle-xs fg-1 fs-0">
        <sht-carousel class="p-relative d-block">
          <div class="rw gap-unequal js-carousel-items js-animate carousel-items" role="list" xaria-label="{{ 'accessibility.slider' | t }}">
            {% for block in section.blocks %}
              {%- liquid
                  assign media_width_desktop = 'calc(100vw / ' | append: section.settings.items_per_row_on_desktop | append: ')'

                  if settings.enable_content_max_width
                    assign media_width_desktop = 'calc(min(100vw, ' | append: settings.content_max_width | append: 'px) / ' | append: section.settings.items_per_row_on_desktop | append: ')'
                  endif
                  assign sizes = '(min-width: 769px) ' | append: media_width_desktop | append: ', ' | append: '100vw'
                  assign widths = '240, 352, 550, 832, 1200, 1600, 1920, 2560, 3840'
                  assign image_item = 'blog-apparel-3' | placeholder_svg_tag: 'placeholder media w-100'
                  assign media_alt = block.settings.image.alt | default: block.settings.image.image | split: '/' | last
                  assign image_item = block.settings.image | image_url: width: block.settings.image.width | image_tag: widths: widths, sizes: sizes, alt: media_alt, class: ' media of-cover w-100'
                -%}
              <sht-carousel-itm role="listitem" tabindex="-1" class="clm js-carousel-item anm anm-fadeInUp fd-column carousel-item" style="--w-xs:12;--w-sm: 6;--w-md: {{- md -}}; --delay: {{ forloop.index | times: 0.05 -}}s; --duration: .6s">
                {% render 'image',
                  image_item: image_item,
                  ratio: section.settings.image_ratio,
                  image_wrap_classes: 'w-100'
                %}
                <div class="card__content card__content--outer wb-break-word w-100">
                  <h3 class="h5 hide-empty mb-0">{{- block.settings.heading | escape -}}</h3>
                  <div class="hide-empty mt-8 text-block">{{- block.settings.description -}}</div>
                </div>
              </sht-carousel-itm>
            {% endfor %}
          </div>
          <div class="carousel-pagination middle-y w-100 p-absolute d-none-md no-js-hidden zi-1 {% if section.settings.show_navigation == false or section.settings.enable_carousel == false %} d-none-important {% endif %}">
            <div class="p-absolute left-0">
              <button type="button" data-step="1" class="js-carousel-prev-btn btn btn-primary--animate rtl-flip-x btn-icon btn-small p-absolute middle-y zi-1 left-0" aria-label="{{ 'accessibility.previous_slide' | t }}" name="previous" disabled>{% render 'icon-chevron-left' %}</button>
            </div>
            <div class="p-absolute right-0">
              <button type="button" data-step="1" class="js-carousel-next-btn btn btn-primary--animate rtl-flip-x btn-icon btn-small p-absolute middle-y zi-1 right-0" aria-label="{{ 'accessibility.next_slide' | t }}" name="next" disabled>{% render 'icon-chevron-right' %}</button>
            </div>
          </div>
        </sht-carousel>
      </sht-carousel-wrapper>
    </div>
    <div class="s-footer {{ section.settings.text | default: 'd-none' | replace: section.settings.text, '' }}">
      <a class="btn btn-primary--animate btn-large hide-empty" href="{{- section.settings.link | default: '#' -}}">
        <span class="d-block o-hidden p-relative">
          <span class="btn-primary__content">
            {{- section.settings.text -}}
          </span>
        </span>
      </a>
      </div>
  </div>
</div>
