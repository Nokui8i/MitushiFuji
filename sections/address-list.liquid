{%- liquid
  assign hide_element_on_compact_information_css = ''
  assign hide_element_on_no_compact_information_css = 'd-none'
  assign button_on_compact_information_css = 'btn-link'

  assign section_id = section.id | md5 | truncate: 12, ""
  assign md = 12.0 | divided_by : section.settings.items_per_row_on_desktop
  assign icon = ''
  if section.settings.content_align == 'diagonal d-grid-md'
    assign md = 6
    assign s_button = section.settings.button_main_text
  endif

  if section.settings.show_address_description
    assign hide_element_on_compact_information_css = 'd-none'
    assign hide_element_on_no_compact_information_css = ''
    assign button_on_compact_information_css = 'btn-primary--animate w-100 btn-large'
    assign button_on_compact_information_css_content = 'btn-primary__content'
  endif
-%}
{% capture icon %}
  {%- render 'icon-arrow-right', class: 'ml-8' -%}
{% endcapture %}
<div class="section color-{{- section.settings.color_scheme }} {{ section.settings.remove_padding_top | replace: 'true', 'section-top-zero' | replace: section.settings.remove_padding_top, '' }} {{ section.settings.remove_padding_bottom | replace: 'true', 'section-bottom-zero' | replace: section.settings.remove_padding_bottom, '' }} {% render 'animation-loader', section: section %}" data-ui-component="Address List Section" role="region" aria-labelledby="sectionHeading-{{ section_id }}">
  <div class="ctnr {{ section.settings.content_align }}">
    {%- render 'section-header', content_align: section.settings.content_align, subheading: section.settings.subheading, heading: section.settings.heading, description: section.settings.description, badge_text: section.settings.badge_text, badge_position: section.settings.badge_position, badge_shape: section.settings.badge_shape, badge_color: section.settings.badge_color, button_main_text: s_button, button_main_link: section.settings.button_main_link, section: section -%}
    <div class="s-content">
      <sht-carousel-wrapper class="carousel-wrapper" data-on-mobile-only="{{ section.settings.enable_carousel }}" data-css-class-on-container="carousel d-flex p-zero m-zero ox-auto p-relative disable-scrollbars fw-nowrap scrollable scrollable-x" data-css-class-on-item="carousel__item p-relative scrollable-aln-start d-flex middle-xs fg-1 fs-0">
        <sht-carousel class="p-relative d-block">
          <div class="rw gap-unequal js-carousel-items js-animate carousel-items" role="list" xaria-label="{{ 'accessibility.slider' | t }}">
            {% for block in section.blocks %}
              <sht-carousel-itm role="listitem" tabindex="-1" class="clm js-carousel-item anm anm-fadeInUp carousel-item" style="--w-xs:12;--w-sm: 6;--w-md: {{- md -}}; --delay: {{ forloop.index | times: 0.05 -}}s; --duration: .6s">
                {% liquid
                  assign loading = "lazy"
                  assign decoding ="async"
                  assign fetchpriority = "auto"

                  if section.index == 1 and forloop.first
                    assign loading = "eager"
                    assign fetchpriority = "high"
                  endif
                  assign cycle_index = forloop.index | minus: 1 | modulo: 3 | plus: 1
                  assign address_list_placeholder = 'blog-apparel-' | append: cycle_index

                  assign media_width_desktop = 'calc(100vw / ' | append: section.settings.items_per_row_on_desktop | append: ')'

                  if settings.enable_content_max_width
                    assign media_width_desktop = 'calc(min(100vw, ' | append: settings.content_max_width | append: 'px) / ' | append: section.settings.items_per_row_on_desktop | append: ')'
                  endif
                  assign sizes = '(min-width: 769px) ' | append: media_width_desktop | append: ', ' | append: '100vw'
                  assign widths = '240, 352, 550, 832, 1200, 1600, 1920, 2560, 3840'

                  assign media = address_list_placeholder | placeholder_svg_tag: 'placeholder media js-image-lazy'
                  assign media_alt = block.settings.image.alt | default: block.settings.image.image | split: '/' | last
                  assign media = block.settings.image | image_url: width: block.settings.image.width | image_tag: widths: widths, sizes: sizes, alt: media_alt, class: 'js-image-lazy media of-cover w-100', loading: loading, fetchpriority: fetchpriority, decoding: decoding

                  assign ratio = section.settings.image_ratio
                  if section.settings.image_ratio == 'auto'
                    assign ratio = block.settings.image.aspect_ratio
                  endif
                %}
                <sht-drwr-trg class="card w-100" data-drawer-id="drawer{{ section_id }}">
                  <div class="js-drawer-trigger-media">
                    {% render 'image', image_item: media, ratio: ratio %}
                  </div>
                  <div class="card__content card__address card__content--outer wb-break-word ta-left">
                    <h3 class="js-drawer-trigger-heading hide-empty h5 mb-12">{{- block.settings.heading | escape -}}</h3>
                    <div class="js-drawer-trigger-content mb-12">
                      <p>{{ block.settings.address }}</p>
                    </div>
                    <div class="js-drawer-trigger-content hide-empty text-block rte mb-12 {{ hide_element_on_compact_information_css }}">{{- block.settings.text -}}</div>
                    <div class="js-drawer-trigger-footer hide-empty mb-12 {{ hide_element_on_compact_information_css }}">
                      {%- if block.settings.address_link != blank -%}
                        <a href="{{- block.settings.address_link | default: '' -}}" class="{{ button_on_compact_information_css }} btn js-drawer-trigger-footer-btn hide-empty" target="_blank">
                          <span class="{{ button_on_compact_information_css_content }} d-flex middle-xs">
                            {{- block.settings.button_text -}}
                            {{- section.settings.show_address_description | default: '' | replace: 'true', icon -}}
                          </span>
                        </a>
                      {%- endif -%}
                    </div>
                    <div class="adrs-lt__cta {{ hide_element_on_no_compact_information_css }}">
                      <button type="button" aria-haspopup="true" class="js-drawer-trigger b-zero btn btn-link">
                        {{ 'sections.address_list.button.view_details' | t }}
                      </button>
                    </div>
                  </div>
                </sht-drwr-trg>
              </sht-carousel-itm>
            {% endfor %}
          </div>
          <div class="carousel-pagination middle-y w-100 p-absolute d-none-md no-js-hidden zi-1 {% if section.settings.show_navigation == false or section.settings.enable_carousel == false %} d-none-important {% endif %}">
            <div class="p-absolute left-0">
              <button type="button" data-step="1" class="js-carousel-prev-btn btn btn-primary--animate rtl-flip-x btn-icon btn-small p-absolute middle-y zi-1 left-0" aria-label="{{ 'accessibility.previous_slide' | t }}" name="previous" disabled>{% render 'icon-chevron-left' %}</button>
            </div>
            <div class="p-absolute right-0">
              <button type="button" data-step="1" class="js-carousel-next-btn btn btn-primary--animate rtl-flip-x btn-icon btn-small p-absolute middle-y zi-1 right-0" aria-label="{{ 'accessibility.next_slide' | t }}" name="next" disabled>{% render 'icon-chevron-right' %}</button>
            </div>
          </div>
        </sht-carousel>
      </sht-carousel-wrapper>

      <div class="s-footer {{ section.settings.content_align | replace: 'diagonal d-grid-md', "d-none" | replace: section.settings.content_align, '' }} {{ section.settings.button_main_text | default: 'd-none' | replace: section.settings.button_main_text, '' }}">
        <a class="btn btn-primary--animate btn-large hide-empty" href="{{- section.settings.button_main_link | default: '#' -}}">
          <span class="d-block o-hidden p-relative">
            <span class="btn-primary__content">
              {{- section.settings.button_main_text -}}
            </span>
          </span>
        </a>
      </div>
    </div>
  </div>
</div>
{% if section.settings.show_address_description %}
  <sht-drwr class="drawer no-focus-visible color-{{- section.settings.color_scheme }}" id="drawer{{ section_id }}" aria-hidden="true" hidden tabindex="-1">
    <div class="drawer__overlay js-drawer-overlay"></div>
    <div class="drawer__wrapper js-drawer-wrapper p-relative" role="dialog" aria-modal="true" aria-label="{{ 'sections.address_list.title' | t }}">
      <div class="drawer__header d-flex between-xs middle-xs">
        <h2 class="drawer__heading js-drawer-heading h5 mb-0 m-zero"></h2>
        <button class="js-drawer-btn-close btn btn-icon btn-large btn-plain" type="button" aria-label="{{ 'accessibility.close' | t }}">{%- render 'icon-close', class: 'd-block' -%}</button>
      </div>
      <div class="drawer__body oy-scroll flex-1">
        <div class="p-relative js-drawer-media mb-20"></div>
        <div class="js-drawer-content text-block"></div>
      </div>
      <div class="drawer__footer js-drawer-footer w-100 p-absolute bottom-0 hide-empty p-sticky"></div>
    </div>
  </sht-drwr>
{% endif %}
