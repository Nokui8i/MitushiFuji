{%- liquid
  assign md = 12.0 | divided_by : section.settings.items_per_row_on_desktop

  if section.settings.content_align == 'diagonal d-grid-md'
    assign md = 6
  endif
  unless section.settings.section_mask_overlay_color.alpha == 0.0 or section.settings.section_mask_overlay_color == blank
    assign overlay_color =  '--color-page-bg-rgb:' | append: section.settings.section_mask_overlay_color.red | append: ',' | append: section.settings.section_mask_overlay_color.green | append: ',' | append: section.settings.section_mask_overlay_color.blue
  endunless
  unless section.settings.section_content_overlay_color.alpha == 0.0 or section.settings.section_content_overlay_color == blank
    assign content_color =  '--color-normal-text-rgb:' | append: section.settings.section_content_overlay_color.red | append: ',' | append: section.settings.section_content_overlay_color.green | append: ',' | append: section.settings.section_content_overlay_color.blue
  endunless
  if settings.enable_content_max_width
    assign carousel_class = 'carousel-content-width o-hidden-md'
  endif

  unless section.settings.star_rating_overlay.alpha == 0.0 or section.settings.star_rating_overlay == blank
    assign rating_star_color = '--color-rating-star: rgba(' | append: section.settings.star_rating_overlay.red | append: ',' | append: section.settings.star_rating_overlay.green | append: ',' | append: section.settings.star_rating_overlay.blue | append: ', 1)'
  endunless

  assign card_content_inner = false
  if section.settings.style_card == 'card'
    assign card_content_inner = true
  endif
-%}
<div class="fpc section color-{{- section.settings.color_scheme }} {{ section.settings.remove_padding_top | replace: 'true', 'section-top-zero' | replace: section.settings.remove_padding_top, '' }} {{ section.settings.remove_padding_bottom | replace: 'true', 'section-bottom-zero' | replace: section.settings.remove_padding_bottom, '' }} {% render 'animation-loader', section: section %}" data-ui-component="Featured Product Carousel Section" role="region" aria-labelledby="sectionHeading-{{ section.id | md5 | truncate: 12, "" }}">
  <div class="ctnr {{ section.settings.content_align }}">
    {%- render 'section-header',
      content_align: section.settings.content_align,
      subheading: section.settings.subheading,
      heading: section.settings.heading,
      description: section.settings.description,
      badge_text: section.settings.badge_text,
      badge_position: section.settings.badge_position,
      badge_shape: section.settings.badge_shape,
      badge_color: section.settings.badge_color,
      section: section
    -%}
    <div class="s-content">
      <sht-carousel class="p-relative d-block {{ carousel_class }}">
        <div aria-atomic="true" class="d-flex fw-nowrap carousel ox-auto p-relative scrollable scrollable-x disable-scrollbars js-carousel-items js-animate">
          {%- for product in section.settings.product_list -%}
            <sht-carousel-itm tabindex="0" class="carousel__item clm js-carousel-item p-relative scrollable-aln-start d-flex fd-column middle-xs fg-1 fs-0 p-zero anm anm-fadeInUp" role="group" aria-roledescription="Slide" aria-label="{{ 'accessibility.slide' | t }} {{ forloop.index }} {{ 'accessibility.of' | t }} {{ forloop.length }}"
              style="--w-xs:12;--w-sm:6;--w-md:{{- md -}}; --delay: {{ forloop.index | times: 0.05 -}}s; --duration: .6s; {{ overlay_color }}; {{ content_color }};" data-item-index="{{ forloop.index }}">
              {% render 'card-product',
                product: product,
                show_vendor: settings.show_product_vendor,
                show_color_swatch: settings.show_color_swatches,
                show_sale_badge: settings.show_sale_badge,
                enable_quick_buy: settings.enable_quick_buy,
                ratio: section.settings.image_ratio,
                card_content_inner: card_content_inner,
                image_width: '320, 450, 550, 750',
                overlay_opacity: section.settings.image_overlay_opacity,
                section: section,
                is_first: forloop.first,
                show_ranking: section.settings.show_ranking,
                ranking_badge_shape: section.settings.ranking_badge_shape,
                ranking_badge_color: section.settings.ranking_badge_color,
                ranking_badge_number: forloop.index,
                color_rating_star: false,
                star_rating_overlay: rating_star_color,
                show_second_image: settings.show_second_image
                %}
            </sht-carousel-itm>
          {%- else -%}
            {%- for i in (1..5) -%}
              {%- liquid
                assign placeholder_index = forloop.index | modulo: 4
                if placeholder_index == 0
                  assign placeholder_index = 4
                endif
              -%}
              <sht-carousel-itm tabindex="0" role="group" aria-roledescription="Slide" aria-label="{{ 'accessibility.slide' | t }} {{ forloop.index }} {{ 'accessibility.of' | t }} {{ forloop.length }}" class="carousel__item clm js-carousel-item p-relative scrollable-aln-start d-flex fd-column middle-xs fg-1 fs-0 p-zero anm anm-fadeInUp" style="--w-xs:12;--w-sm:6;--w-md:{{- md -}}; --delay: {{ forloop.index | times: 0.05 -}}s; --duration: .6s; {{ overlay_color }}; {{ content_color }};" data-item-index="{{ forloop.index }}">
                {% render 'card-product-placeholder',
                  ratio: section.settings.image_ratio,
                  card_content_inner: card_content_inner,
                  overlay_opacity:section.settings.image_overlay_opacity,
                  show_ranking: section.settings.show_ranking,
                  ranking_badge_shape: section.settings.ranking_badge_shape,
                  ranking_badge_color: section.settings.ranking_badge_color,
                  ranking_badge_number: forloop.index,
                  style_card: section.settings.style_card,
                  product_placeholder: placeholder_index
                %}
              </sht-carousel-itm>
            {%- endfor -%}
          {%- endfor -%}
        </div>
        <div class="carousel-pagination zi-1 middle-y w-100 p-absolute no-js-hidden {{ section.settings.show_navigation | default: 'd-none d-block-sm' | replace: 'true', '' }}">
          <div class="p-absolute left-0">
            <button type="button" data-step="1" class="js-carousel-prev-btn rtl-flip-x btn btn-primary--animate btn-icon btn-small p-absolute middle-y left-0" aria-label="{{ 'accessibility.previous_slide' | t }}" name="previous" disabled>{% render 'icon-chevron-left' %}</button>
          </div>
          <div class="p-absolute right-0">
            <button type="button" data-step="1" class="js-carousel-next-btn rtl-flip-x btn btn-primary--animate btn-icon btn-small p-absolute middle-y right-0" aria-label="{{ 'accessibility.next_slide' | t }}" name="next" disabled>{% render 'icon-chevron-right' %}</button>
          </div>
        </div>
      </sht-carousel>
    </div>
  </div>
</div>
