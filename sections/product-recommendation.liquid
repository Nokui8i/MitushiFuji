{%- liquid
assign md = 12.0 | divided_by : section.settings.items_per_row_on_desktop  
assign column_mobile = 12 | divided_by: section.settings.items_per_row_on_mobile

assign card_content_inner = false
if section.settings.style_card == 'card'
  assign card_content_inner = true
endif
-%}
<div class="section color-{{ section.settings.color_scheme }} {{ section.settings.remove_padding_top | replace: 'true', 'section-top-zero' | replace: section.settings.remove_padding_top, '' }} {{ section.settings.remove_padding_bottom | replace: 'true', 'section-bottom-zero' | replace: section.settings.remove_padding_bottom, '' }} {% render 'animation-loader', section: section %}" data-ui-component="Product Recommendation Section">
  <div class="ctnr">
    <sht-prd-recom class="product-recommendations" data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit={{ section.settings.items_to_show }}">
      {%- if recommendations.performed and recommendations.products_count > 0 -%}
        {% render 'section-header',
          content_align: section.settings.content_alignment,
          heading: section.settings.heading,
          section: section
        %}
        <div class="s-content">
          <sht-carousel-wrapper class="carousel-wrapper"
            data-on-mobile-only="{{ section.settings.enable_carousel }}"
            data-css-class-on-container="carousel d-flex p-zero m-zero ox-auto p-relative disable-scrollbars fw-nowrap scrollable scrollable-x"
            data-css-class-on-item="carousel__item p-relative scrollable-aln-start d-flex fg-1 fs-0">
            <sht-carousel class="p-relative d-block" role="region" aria-labelledby="sectionHeading-{{ section.id | md5 | truncate: 12, "" }}">
              <div class="rw gap-unequal js-carousel-items carousel-items">
                {% for recommendation in recommendations.products limit: section.settings.items_to_show %}
                  <sht-carousel-itm
                    role="group" aria-roledescription="Slide"
                    aria-label="{{ 'accessibility.slide' | t }} {{ forloop.index }} {{ 'accessibility.of' | t }} {{ forloop.length }}"
                    class="clm js-carousel-item carousel-item" style="--w-xs:{{ column_mobile }};--w-sm: 6;--w-md: {{- md -}};">
                    {% render 'card-product', 
                      product: recommendation,
                      ratio: settings.product_card_image_ratio,
                      show_second_image: settings.show_second_image,
                      show_vendor: settings.show_product_vendor,
                      show_color_swatch: settings.show_color_swatches,
                      show_sale_badge: settings.show_sale_badge,
                      item_per_row: section.settings.item_per_row,
                      enable_quick_buy: settings.enable_quick_buy,
                      card_content_inner: card_content_inner,
                      section: section,
                      is_first: forloop.first
                    %}
                  </sht-carousel-itm >
                {% endfor %}
              </div>
              <div class="carousel-pagination middle-y w-100 p-absolute d-none-md no-js-hidden zi-1{% if section.settings.show_navigation == false or section.settings.enable_carousel == false %} d-none-important{% endif %}">
                <div class="p-absolute left-0">
                  <button type="button" data-step="1" class="js-carousel-prev-btn btn btn-primary--animate btn-icon btn-small p-absolute pstn-mdle zi-1 left-0" aria-label="{{ 'accessibility.previous_slide' | t }}" name="previous" disabled>{% render 'icon-chevron-left' %}</button>
                </div>
                <div class="p-absolute right-0">
                  <button type="button" data-step="1" class="js-carousel-next-btn btn btn-primary--animate btn-icon btn-small p-absolute pstn-mdle zi-1 right-0" aria-label="{{ 'accessibility.next_slide' | t }}" name="next" disabled>{% render 'icon-chevron-right' %}</button>
                </div>
              </div>
            </sht-carousel>
          </sht-carousel-wrapper>
        </div>
      {%- endif -%}
    </sht-prd-recom>
  </div>
</div>
{% schema %}
{
  "name": "t:general.product_recommendation",
  "settings": [
    {
      "type": "paragraph",
      "content": "t:general.related_products_info"
    },
    {
      "type": "paragraph",
      "content": "t:general.related_products_select_info"
    },
    {
      "type": "header",
      "content": "t:general.general"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:general.color_scheme",
      "default": "accent-1"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:general.heading",
      "default": "You might also like"
    },
    {
      "type": "header",
      "content": "t:general.layout"
    },
    {
      "type": "select",
      "id": "style_card",
      "label": "t:general.style",
      "default": "standard",
      "info": "t:general.mask_overlay",
      "options": [
        {
          "value": "standard",
          "label": "t:general.standard"
        },
        {
          "value": "card",
          "label": "t:general.card"
        }
      ]
    },
    {
      "type": "select",
      "id": "items_per_row_on_desktop",
      "label": "t:general.items_per_row_on_desktop",
      "default": "4",
      "options": [
        {
          "value": "3",
          "label": "3"
        },
        {
          "value": "4",
          "label": "4"
        },
        {
          "value": "5",
          "label": "5"
        },
        {
          "value": "6",
          "label": "6"
        }
      ]
    },
    {
      "type": "select",
      "id": "items_per_row_on_mobile",
      "label": "t:general.items_per_row_on_mobile",
      "default": "1",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ]
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "t:general.content_alignment",
      "default": "ta-left",
      "options": [
        {
          "value": "ta-left",
          "label": "t:general.left"
        },
        {
          "value": "ta-center",
          "label": "t:general.center"
        }
      ]
    },
    {
      "type": "range",
      "id": "items_to_show",
      "label": "t:general.items_to_show",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "enable_carousel",
      "label": "t:general.enable_carousel_on_mobile",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "label": "t:general.show_navigation_on_mobile",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "remove_padding_top",
      "label": "t:general.remove_padding_top",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "remove_padding_bottom",
      "label": "t:general.remove_padding_bottom",
      "default": false
    }
  ]
}
{% endschema %}
