    {
      "type": "range",
      "id": "border_radius",
      "label": "Border Radius",
      "min": 0,
      "max": 24,
      "step": 2,
      "unit": "px",
      "default": 12
    },
    {
      "type": "select",
      "id": "media_ratio",
      "label": "Media ratio",
      "default": "1/1",
      "options": [
        {
          "value": "1/1",
          "label": "Square"
        },
        {
          "value": "2/3",
          "label": "Portrait 2:3"
        },
        {
          "value": "3/2",
          "label": "Landscape 3:2"
