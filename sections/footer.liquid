{%- liquid
  assign section_id = section.id | md5 | truncate: 12, ''
  capture icon_chevron_down
    render 'icon-arrow-animation', class: ''
  endcapture
  capture icon_chevron_down_with_class
    render 'icon-arrow-animation', class: 'fs-0 d-none-md '
  endcapture
-%}
<footer class="js-footer section color-{{ section.settings.color_scheme }} {{ section.settings.remove_padding_top | replace: 'true', 'section-top-zero' | replace: false, '' }} {{ section.settings.remove_padding_bottom | replace: 'true', 'section-bottom-zero' | replace: false, '' }} {% render 'animation-loader', section: section %}" data-ui-component="Section Footer">
  <div class="ctnr">
    <div class="rw center-xs start-lg footer-main-row">
      <div class="clm {{ section.settings.enable_back_to_top | default: 'd-none' | replace: 'true', '' }}" style="--w-xs: 12; --w-sm: 10; --w-lg: 12;">
        <button onclick="SHTHelper.qde.scrollTo({top: 0, behavior: `smooth`});" class="mb-64 pt-lg-12 pb-lg-12 btn btn-link padding--start js-back-to-top-btn">
          {{ 'sections.footer.back_to_top' | t }}
          {% render 'icon-arrow-up', size: 16, class: 'ml-8' %}
        </button>
      </div>
      {%- if section.settings.logo != blank or section.settings.heading != blank or section.settings.description != blank or section.settings.show_info -%}
        <div class="clm footer-logo-column" style="--w-xs: 12; --w-sm: 10; --w-lg: 3;">
          <div class="footer-logo-wrapper">
            <span class="h6 pt-16 pb-16 m-zero d-block hide-empty">{{- section.settings.heading | escape -}}</span>
            {%- if section.settings.logo != blank -%}
              <div class="footer__logo d-block mt-24 mb-24 center-xs start-lg" style="--logo-width: {{ section.settings.logo_width }}px">
                {%- assign image_size_2x = section.settings.logo_width | times: 2 -%}
                <img
                  srcset="{{ section.settings.logo | image_url: width: section.settings.logo_width }} 1x, {{ section.settings.logo | image_url: width: image_size_2x }} 2x"
                  src="{{ section.settings.logo | image_url: width: section.settings.logo_width }}"
                  loading="lazy"
                  class="logo"
                  width="{{ section.settings.logo.width }}"
                  height="{{ section.settings.logo.height }}"
                  alt="{{ section.settings.logo.alt | default: shop.name | escape }}"
                >
              </div>
            {%- endif -%}
            <div class="text-block pt-12 pb-12 hide-empty">
              {{- section.settings.description -}}
            </div>
            {%- if shop.features.follow_on_shop? and section.settings.show_follow_on_shop -%}
              <div class="pt-24 pb-24">
                {% comment %} TODO: enable theme-check once `login_button` is accepted as valid filter {% endcomment %}
                {% # theme-check-disable %}
                {{ shop | login_button: action: 'follow' }}
                {% # theme-check-enable %}
              </div>
            {%- endif -%}
            {%- if section.settings.show_info -%}
              <span class="pt-16 pb-16 m-zero d-block h6 hide-empty">{{- section.settings.contact_heading | escape -}}</span>
              {%- render 'contact', classes: 'footer__contact pt-8 pb-32 wb-break-word', header_style: 'd-none-important', contact_class: 'r-gap-16' -%}
            {%- endif -%}
          </div>
        </div>
      {%- endif -%}
      {%- if section.blocks.size > 0 -%}
        <div class="clm footer-nav-column" style="--w-xs: 12; --w-sm: 10; --w-lg: 3;">
          <div class="footer-nav-wrapper">
            <ul class="footer__nav footer__nav--single-column ls-none">
              {%- for block in section.blocks -%}
                {%- case block.type -%}
                  {%- when 'menu' -%}
                    {%- if block.settings.menu -%}
                      {%- for link in block.settings.menu.links -%}
                        <li class="nav__item">
                          <a href="{{ link.url }}"{% if link.active %} aria-current="page"{% endif %} class="footer__nav__link d-inline-block pt-8 pb-8 pr-0 pl-0">
                            {{- link.title -}}
                          </a>
                        </li>
                      {%- endfor -%}
                    {%- endif -%}
                {%- endcase -%}
              {%- endfor -%}
            </ul>
          </div>
        </div>
      {%- endif -%}
      <div class="clm hide-empty" style="--w-xs: 12; --w-sm: 10; --w-lg: 3;">
        {%- if section.settings.enable_newsletter -%}
          <div class="footer-newsletter card mt-24 mb-64 mt-lg-0 mb-lg-32">
            <span class="card__title">
              {{ section.settings.newsletter_heading | default: 'Subscribe' | escape }}
              <svg fill="#333" width="40px" viewBox="0 -960 960 960" height="40px" xmlns="http://www.w3.org/2000/svg">
                <path d="M106.67-564q0-93.33 41.5-171.17 41.5-77.83 111.16-129.5L299-811.33q-57.33 42.66-91.5 106.66T173.33-564h-66.66Zm680 0q0-76.67-34.17-140.67-34.17-64-91.5-106.66l39.67-53.34q69.66 51.67 111.16 129.5 41.5 77.84 41.5 171.17h-66.66ZM160-200v-66.67h80v-296q0-83.66 49.67-149.5Q339.33-778 420-796v-24q0-25 17.5-42.5T480-880q25 0 42.5 17.5T540-820v24q80.67 18 130.33 83.83Q720-646.33 720-562.67v296h80V-200H160Zm320-301.33ZM480-80q-33 0-56.5-23.5T400-160h160q0 33-23.5 56.5T480-80ZM306.67-266.67h346.66v-296q0-72-50.66-122.66Q552-736 480-736t-122.67 50.67q-50.66 50.66-50.66 122.66v296Z"></path>
              </svg>
            </span>
            {%- if section.settings.newsletter_description != blank -%}
              <p class="card__content">{{ section.settings.newsletter_description | strip_html }}</p>
            {%- else -%}
              <p class="card__content">Get fresh web design resources delivered straight to your inbox every week.</p>
            {%- endif -%}
            {%- form 'customer', id: 'footerNewsletterForm', class: 'card__form' -%}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <label class="visually-hidden" for="newsletterForm-{{- section_id -}}">
                {{ 'general.newsletter.label' | t }}
              </label>
              <input id="newsletterForm-{{- section_id -}}" type="email" name="contact[email]" value="{{ form.email }}" aria-required="true" autocorrect="off" autocapitalize="off" autocomplete="email" {% if form.errors %} autofocus aria-invalid="true" aria-describedby="NewsletterFooter-error" {% elsif form.posted_successfully? %} aria-describedby="NewsletterFooter-success" {% endif %} placeholder="{{ 'general.newsletter.email_placeholder' | t | default: 'Your Email' }}" pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$" required>
              <button type="submit" title="SignUp" class="sign-up" name="commit" id="subscribe" aria-label="{{ 'general.newsletter.button_label' | t }}">
                <svg fill="#000" width="24px" viewBox="0 -960 960 960" height="24px" xmlns="http://www.w3.org/2000/svg">
                  <path d="m321-80-71-71 329-329-329-329 71-71 400 400L321-80Z"></path>
                </svg>
              </button>
              {%- if form.errors -%}
                <div class="d-flex middle-xs center-xs mt-16" style="width: 100%;">
                  <div class="icon icon--small icon--error fs-0">
                    {% render 'icon-error', size: 16 %}
                  </div>
                  <span class="ml-8 subtext">
                    {{ form.errors.translated_fields.email | capitalize }}
                    {{ form.errors.messages.email }}
                  </span>
                </div>
              {%- endif -%}
              {%- if form.posted_successfully? -%}
                <div class="d-flex middle-xs center-xs mt-16" style="width: 100%;">
                  <div class="icon icon--small icon--success fs-0">
                    {% render 'icon-check-mark', size: 16 %}
                  </div>
                  <span class="ml-8 subtext">
                    {{ 'general.newsletter.success' | t }}
                  </span>
                </div>
              {%- endif -%}
            {%- endform -%}
          </div>
        {%- endif -%}
        {%- if section.settings.show_socical_icons -%}
          <div class="footer__socials maw-lg-100 m-auto mb-32">
            <span class="h6 pt-16 pb-16 m-zero d-block ta-center hide-empty">{{- section.settings.social_heading | escape -}}</span>
            {% render 'socials', classes: 'center-xs gap-16' %}
          </div>
        {%- endif -%}
      </div>
    </div>
    <div class="footer__content__bottom m-auto d-flex center-xs fd-column middle-xs mt-lg-64 gap-24 c-gap-lg-48 r-gap-lg-4 fd-row-lg between-lg fw-wrap">
      <div class="d-flex fd-column center-xs middle-xs fd-row-lg hide-empty">
        <div class="footer-localization w-100 d-flex gap-16 fw-wrap hide-empty mb-64 mb-lg-0 pr-lg-24 flex-1 center-xs">
          {%- if section.settings.show_currency_selector and localization.available_countries.size > 1 -%}
            <sht-localization class="d-flex" data-js-file-id="component-country-switcher-js-file" data-js-file="{{ 'component-country-switcher.js' | asset_url }}" data-section-id="shopify-section-country-switcher-footer" data-url="{{ routes.root_url }}?section_id=country-switcher-footer">
              <button type="button" class="js-country-switcher-btn btn-localization fs-body d-flex between-xs middle-xs w-100 ta-left c-pointer b-zero gap-4">
                {{ localization.country | image_url: width: 24, height: 24 | image_tag: widths: '24', sizes: '350px', class: 'country-list--flag br-50p of-cover h-100', loading: 'lazy', fetchpriority: 'auto', decoding: 'async' }}
                {{ localization.country.currency.iso_code }}
                {{ localization.country.currency.symbol }}
                {{ icon_chevron_down }}
              </button>
            </sht-localization>
          {%- endif -%}
          {%- if section.settings.show_language_selector and localization.available_languages.size > 1 -%}
            <sht-localization class="d-flex" data-js-file-id="component-language-switcher-js-file" data-js-file="{{ 'component-language-switcher.js' | asset_url }}" data-section-id="shopify-section-language-switcher-footer" data-url="{{ routes.root_url }}?section_id=language-switcher-footer">
              <button type="button" class="js-language-switcher-btn btn-localization fs-body d-flex between-xs middle-xs w-100 ta-left c-pointer b-zero gap-4">
                {{ localization.language.iso_code | upcase }}
                {{ icon_chevron_down }}
              </button>
            </sht-localization>
          {%- endif -%}
        </div>
        {%- if section.settings.show_payment_methods and shop.enabled_payment_types -%}
          <div class="footer__payment p-relative-lg pl-lg-24">
            <span class="visually-hidden">{{ 'sections.footer.payment' | t }}</span>
            <ul class="list list-payment d-flex gap-16 center-xs start-lg fw-wrap ls-none">
              {%- for type in shop.enabled_payment_types -%}
                <li class="list-payment__item d-flex">
                  {{ type | payment_type_svg_tag: class: 'icon--full-color' }}
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
      </div>
      <div class="d-flex">
        <div class="color-light subtext pt-lg-12 pb-lg-12 ta-center ta-left-lg">
          <small class="subtext">&copy; {{ shop.name | link_to: routes.root_url }} • </small>
          <small class="subtext">{{ powered_by_link }}</small>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .js-footer.section {
    background-color: #f5f5f5 !important;
  }
  
  /* כל הטקסט ב-footer יהיה שחור */
  .js-footer.section,
  .js-footer.section *,
  .js-footer .h6,
  .js-footer .text-block,
  .js-footer .footer__nav__link,
  .js-footer .footer__nav a,
  .js-footer .subtext,
  .js-footer .subtext *,
  .js-footer button,
  .js-footer .btn-link,
  .js-footer .js-collapsible-region-trigger,
  .js-footer .js-country-switcher-btn,
  .js-footer .js-language-switcher-btn,
  .js-footer .footer__contact,
  .js-footer .footer__socials,
  .js-footer .footer__socials * {
    color: #000000 !important;
  }
  
  /* לינקים */
  .js-footer a,
  .js-footer a:visited,
  .js-footer a:link {
    color: #000000 !important;
  }
  
  /* לינקים ב-hover */
  .js-footer a:hover {
    color: #000000 !important;
    opacity: 0.7 !important;
  }
  
  /* אייקונים */
  .js-footer svg,
  .js-footer path {
    fill: #000000 !important;
    stroke: #000000 !important;
  }
  
  /* מרכז את הלוגו ב-mobile */
  @media (max-width: 749px) {
    .js-footer .footer-logo-column {
      display: flex !important;
      justify-content: center !important;
      align-items: center !important;
    }
    
    .js-footer .footer-logo-wrapper {
      display: flex !important;
      flex-direction: column !important;
      align-items: center !important;
      text-align: center !important;
      width: 100% !important;
    }
    
    .js-footer .footer__logo {
      display: flex !important;
      justify-content: center !important;
      align-items: center !important;
      text-align: center !important;
      width: 100% !important;
      margin-left: auto !important;
      margin-right: auto !important;
    }
    
    .js-footer .footer__logo .logo {
      margin: 0 auto !important;
      display: block !important;
    }
    
    /* מרכז את התפריט ב-mobile */
    .js-footer .footer-nav-column {
      display: flex !important;
      justify-content: center !important;
      align-items: center !important;
    }
    
    .js-footer .footer-nav-wrapper {
      display: flex !important;
      justify-content: center !important;
      align-items: center !important;
      width: 100% !important;
    }
    
    .js-footer .footer__nav--single-column {
      display: flex !important;
      flex-direction: column !important;
      align-items: center !important;
      text-align: center !important;
      gap: 8px !important;
    }
    
    .js-footer .footer__nav--single-column .nav__item {
      text-align: center !important;
    }
    
    .js-footer .footer__nav--single-column .footer__nav__link {
      text-align: center !important;
    }
  }
  
  /* בדסקטופ - התפריט מתחת ללוגו (אנכי) */
  @media (min-width: 750px) {
    .js-footer .footer-main-row {
      flex-direction: row !important;
      align-items: flex-start !important;
    }
    
    .js-footer .footer-logo-column {
      width: auto !important;
      max-width: none !important;
      flex: 0 0 auto !important;
    }
    
    .js-footer .footer-nav-column {
      width: auto !important;
      max-width: none !important;
      margin-top: 0 !important;
      margin-left: 48px !important;
      flex: 0 0 auto !important;
    }
    
    .js-footer .footer__nav--single-column {
      display: flex !important;
      flex-direction: column !important;
      justify-content: flex-start !important;
      align-items: flex-start !important;
      gap: 8px !important;
    }
    
    .js-footer .footer__nav--single-column .nav__item {
      text-align: left !important;
    }
  }
</style>

