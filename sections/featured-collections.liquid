{%- liquid
  assign now =  "now" | date: "%N"
  assign section_id = section.id | md5 | truncate: 12, ""
  assign tab_label_placeholder = 'general.collection.label' | t
  assign tab_aria_controls_prefix = "products-tabs-tabs-" | append: section_id | append: now
  assign tab_id = "products-tabs-tab-" | append: section_id | append: now
  assign column_mobile = 12 | divided_by: section.settings.items_per_row_on_mobile
  assign items_to_show = section.settings.items_to_show
  assign md = 12.0 | divided_by : section.settings.items_per_row_on_desktop
  
  if settings.enable_content_max_width
    assign carousel_class = 'carousel-content-width'
  endif

  assign card_content_inner = false
  if section.settings.style_card == 'card'
    assign card_content_inner = true
  endif
-%}
<div class="featured-collections section color-{{- section.settings.color_scheme }} {{ section.settings.remove_padding_top | replace: 'true', 'section-top-zero' | replace: section.settings.remove_padding_top, '' }} {{ section.settings.remove_padding_bottom | replace: 'true', 'section-bottom-zero' | replace: section.settings.remove_padding_bottom, '' }} {% render 'animation-loader', section: section %}" data-ui-component="Featured Collections Section" role="region" aria-labelledby="sectionHeading-{{ section_id }}">
  <div class="ctnr">
    {% render 'section-header',
      subheading: section.settings.subheading,
      heading: section.settings.heading,
      description: section.settings.description,
      content_align: section.settings.content_alignment,
      badge_text: section.settings.badge_text,
      badge_position: section.settings.badge_position,
      badge_shape: section.settings.badge_shape,
      badge_color: section.settings.badge_color,
      section: section
    %}
    <div class="s-content">
      <sht-tabs class="d-block">
        {% if section.blocks.size > 1 %}
          <ul class="tab__header p-relative ox-auto disable-scrollbars ls-none ws-nowrap d-flex" role="tablist">
            {% for block in section.blocks limit: section.blocks.size %}
              <li class="tab__item d-inline-block" {{ block.shopify_attributes }} role="presentation">
                <a class="tab__link h6 mb-0 d-block p-relative color-light {% if forloop.first %}tab__link--active{% endif %} js-tab-link" role="tab" id="{{ tab_id }}-{{ block.id }}" href="#{{ tab_aria_controls_prefix }}-{{ block.id }}" aria-controls="{{ tab_aria_controls_prefix }}-{{ block.id }}">
                 {{ block.settings.heading | default: block.settings.collection.title | default: tab_label_placeholder }}
                </a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
        <div class="tab__content">
          {% for block in section.blocks limit: section.blocks.size %}
            {%- liquid
              assign collection = collections[block.settings.collection]
              assign products = collection.products
              assign is_first_tab = forloop.first

            -%}
            <div class="tab__panel {% if forloop.first %} tab__panel--active d-block {% else %} d-none {% endif %} {{ block.type }} js-tab-panel {{ tab_aria_controls_prefix }}-{{ block.id }} js-animate" data-tab-content-id="{{ tab_aria_controls_prefix }}-{{ block.id }}" aria-labelledby="{{ tab_id }}-{{ block.id }}" role="tabpanel" {{ block.shopify_attributes }}>
              <sht-carousel class="p-relative d-block {{ carousel_class }}">
                <div aria-atomic="true" class="gap-unequal js-carousel-items featured-collections-items{% if section.settings.enable_carousel %} mobile-carousel{% else %} mobile-grid{% endif %}{% if section.settings.desktop_layout == 'grid' %} desktop-grid{% else %} desktop-carousel{% endif %}" role="list" aria-label="{{ 'accessibility.slider' | t }}">
                    {% for product in products limit: items_to_show %}
                      {%- liquid
                            assign is_first_image = false
                            if is_first_tab and forloop.first
                              assign is_first_image = true
                            endif
                      -%}
                      <sht-carousel-itm role="listitem" class="clm js-carousel-item anm anm-fadeInUp mobile-carousel-item desktop-carousel-item" style="--w-xs:{{ column_mobile }};--w-md: {{ md }}; --w-sm: 6;  --delay: {{ forloop.index | times: 0.05 -}}s; --duration: .6s" data-item-index="{{ forloop.index }}">
                        {% render 'card-product',
                          product: product,
                          show_vendor: settings.show_product_vendor,
                          show_color_swatch: settings.show_color_swatches,
                          show_sale_badge: settings.show_sale_badge,
                          enable_quick_buy: settings.enable_quick_buy,
                          ratio: settings.product_card_image_ratio,
                          show_second_image: settings.show_second_image,
                          item_per_row: items_to_show,
                          card_content_inner: card_content_inner,
                          section: section,
                          is_first: is_first_image
                        %}
                      </sht-carousel-itm>
                    {% else %}
                      {%- for i in (1..items_to_show) -%}
                        {%- liquid
                          assign placeholder_index = forloop.index | modulo: 4
                          if placeholder_index == 0
                            assign placeholder_index = 4
                          endif
                        -%}
                        <sht-carousel-itm role="listitem" class="clm js-carousel-item anm anm-fadeInUp mobile-carousel-item desktop-carousel-item" style="--w-xs: {{ column_mobile }};--w-md: {{ md }}; --w-sm: 6;  --delay: {{ forloop.index | times: 0.05 -}}s; --duration: .6s" data-item-index="{{ forloop.index }}">
                          {% render 'card-product-placeholder',
                            ratio: settings.product_card_image_ratio,
                            show_vendor: settings.show_product_vendor,
                            card_content_inner: card_content_inner,
                            product_placeholder: placeholder_index
                            %}
                        </sht-carousel-itm>
                      {%- endfor -%}
                    {% endfor %}
                  </div>
                  <div class="carousel-pagination js-carousel-pagination middle-y p-absolute center-xs no-js-hidden navigation-{{ section.settings.show_navigation }} mobile-carousel-{{ section.settings.enable_carousel }} desktop-layout-{{ section.settings.desktop_layout }}">
                    <div class="p-absolute left-0">
                      <button type="button" data-step="1" class="js-carousel-prev-btn btn btn-primary--animate rtl-flip-x btn-icon btn-small p-absolute middle-y left-0" aria-label="{{ 'accessibility.previous_slide' | t }}" name="previous" disabled>{% render 'icon-chevron-left' %}</button>
                    </div>
                    <div class="p-absolute right-0">
                      <button type="button" data-step="1" class="js-carousel-next-btn btn btn-primary--animate rtl-flip-x btn-icon btn-small p-absolute middle-y right-0" aria-label="{{ 'accessibility.next_slide' | t }}" name="next" disabled>{% render 'icon-chevron-right' %}</button>
                    </div>
                  </div>
                </sht-carousel>
              {% if block.settings.collection.products_count >= items_to_show %}
                {%- liquid
                  assign default_text_btn = "general.search.view_all" | t
                -%}
                <div class="s-footer {{ section.settings.content_alignment }} {{ section.settings.show_view_all_button | default: 'd-none' | replace: 'true', '' }}">
                  <a href="{{- collection.url | default: "#" -}}" class="btn btn-primary--animate btn-large">
                    <span class="d-block o-hidden p-relative">
                      <span class="btn-primary__content">
                        {{- section.settings.button_text | default: default_text_btn -}}
                      </span>
                    </span>
                  </a>
                </div>
              {% endif %}
            </div>
          {%- endfor -%}
        </div>
      </sht-tabs>
    </div>
  </div>
</div>
