{%- liquid
  assign md = 12.0 | divided_by : section.settings.items_per_row_on_desktop

  if section.settings.content_align == 'diagonal d-grid-md'
    assign md = 6
    assign s_button = section.settings.button_main_text
  endif
-%}

<div class="section color-{{- section.settings.color_scheme }} {{ section.settings.remove_padding_top | replace: 'true', 'section-top-zero' | replace: section.settings.remove_padding_top, '' }} {{ section.settings.remove_padding_bottom | replace: 'true', 'section-bottom-zero' | replace: section.settings.remove_padding_bottom, '' }} {% render 'animation-loader', section: section %}" data-ui-component="Icon With Text Section" role="region" aria-labelledby="sectionHeading-{{ section.id | md5 | truncate: 12, "" }}">
  <div class="ctnr {{ section.settings.content_align }}">
    {% render 'section-header', content_align: section.settings.content_align, subheading: section.settings.subheading, heading: section.settings.heading, description: section.settings.description, button_main_text: s_button, button_main_link: section.settings.button_main_link, badge_text: section.settings.badge_text, badge_position: section.settings.badge_position, badge_shape: section.settings.badge_shape, badge_color: section.settings.badge_color, section: section %}
    <div class="s-content">
      <sht-carousel-wrapper class="carousel-wrapper" data-on-mobile-only="{{ section.settings.enable_carousel }}" data-css-class-on-container="carousel m-zero ox-auto p-relative fw-nowrap scrollable scrollable-x disable-scrollbars" data-css-class-on-item="carousel__item p-zero p-relative scrollable-aln-start d-flex fg-1 fs-0">
        <sht-carousel class="p-relative d-block">
          <div class="rw gap-unequal js-carousel-items js-animate carousel-items" role="list" aria-label="{{ 'accessibility.slider' | t }}">
            {%- for block in section.blocks limit: section.blocks.size -%}
              <sht-carousel-itm role="listitem" tabindex="-1" class="clm js-carousel-item anm anm-fadeInUp carousel-item" style="--w-xs:12;--w-sm: 6;--w-md:{{- md -}};--delay: {{ forloop.index | times: 0.05 -}}s; --duration: .6s" {{ block.shopify_attributes }}>
                <div class="">
                  <div class="{{ section.settings.icon_color }} bg-transparent">
                    {%- liquid
                    assign loading = "lazy"
                    assign decoding ="async"
                    assign fetchpriority = "auto"

                    if section.index == 1 and forloop.first
                      assign loading = "eager"
                      assign fetchpriority = "high"
                    endif

                    assign icon_svg = ''
                    assign icon_source = block.settings.icon_source
                    if icon_source == 'theme_library'
                      render 'icon-loader', icon: block.settings.options_icon, size: 36, class: "icon--square h-100 w-100 d-inline-block"
                    elsif icon_source == 'custom_img'
                      assign custom_icon = 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder media of-cover js-image-lazy'
                      assign custom_icon = block.settings.custom_img | image_url: width: block.settings.custom_img.width | image_tag: widths: '250', sizes: '500px', alt: block.settings.heading, class: 'media of-cover h-100 w-100', loading: loading, fetchpriority: fetchpriority, decoding: decoding
                      render 'image', image_item: custom_icon, image_wrap_classes: "icon--square d-inline-block", image_classes: "h-100 w-100"
                    else
                      assign icon_svg = block.settings.html_code
                    endif
                    -%}
                  </div>
                  {%- if icon_svg != '' -%}
                    <div class="icon--square custom-icon h-100 w-100 d-inline-block bg-transparent {{ section.settings.icon_color }}">
                      {{- icon_svg -}}
                    </div>
                  {%- endif -%}
                  <h3 class="m-zero h5 mb-12 mt-16 hide-empty">{{- block.settings.heading -}}</h3>
                  <div class="text-block hide-empty" tabindex="-1">{{- block.settings.description -}}</div>
                </div>
              </sht-carousel-itm>
            {%- endfor -%}
          </div>
          <div class="carousel-pagination middle-y w-100 p-absolute d-none-md no-js-hidden zi-1 {% if section.settings.show_navigation == false or section.settings.enable_carousel == false %} d-none {% endif %}">
            <div class="p-absolute left-0">
              <button type="button" data-step="1" class="js-carousel-prev-btn btn btn-primary--animate rtl-flip-x btn-icon btn-small p-absolute middle-y zi-1 left-0" aria-label="{{ 'accessibility.previous_slide' | t }}" name="previous" disabled>{% render 'icon-chevron-left' %}</button>
            </div>
            <div class="p-absolute right-0">
              <button type="button" data-step="1" class="js-carousel-next-btn btn btn-primary--animate rtl-flip-x btn-icon btn-small p-absolute middle-y zi-1 right-0" aria-label="{{ 'accessibility.next_slide' | t }}" name="next" disabled>{% render 'icon-chevron-right' %}</button>
            </div>
          </div>
        </sht-carousel>
      </sht-carousel-wrapper>
      <div class="s-footer {{ section.settings.content_align | replace: 'diagonal d-grid-md', "d-none" | replace: section.settings.content_align, '' }} {{ section.settings.button_main_text | default: 'd-none' | replace: section.settings.button_main_text, '' }}">
        <a class="btn btn-primary--animate btn-large hide-empty" href="{{- section.settings.button_main_link | default: '#' -}}">
          <span class="d-block o-hidden p-relative">
            <span class="btn-primary__content">
              {{- section.settings.button_main_text -}}
            </span>
          </span>
        </a>
      </div>
    </div>
  </div>
</div>
