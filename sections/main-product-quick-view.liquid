{%- liquid
  layout none
  assign variant_label = settings.variant_swatches_option | downcase | default: 'color'
  assign place_holder = 'product-apparel-1' | placeholder_svg_tag: 'placeholder js-image-lazy w-100 h-100 p-absolute'
  assign product_form_id = 'productQuickViewForm-' | append: section.id
  assign section_id = section.id | md5 | truncate: 12, ""
  assign thumb_index = 0
  assign ratio_thubnails = settings.quick_buy_thumbnails_ratio
  assign ratio = settings.quick_buy_media_ratio
  assign object_fit = 'of-cover'
  assign media_background = settings.quick_buy_media_background
-%}
<div class="js-quick-view-container">
  <div class="product__quickview h-100 d-flex fd-column" data-ui-component="Product Quick View Section">
    <div class="quickview__body d-flex fd-row-md fd-column p-relative">
      <div class="quickview__left-layout d-flex fd-column gap-16">
        <sht-prd-slideshow role="status" class="product-slideshow d-block p-relative" data-hide-variant-image="true" data-section="{{ section.id }}">
          <div class="p-relative w-100 h-100 d-flex gap-16 fd-column-reverse fd-row-md">
            {%- if product.media.size > 1 -%}
              <div class="product-slideshow__thumbnail-overlay d-none d-block-md">
                <sht-vert-carousel class="carousel--vertical" data-section="{{ section.id }}">
                  <div class="product-slideshow__thumbs h-100 top-xs js-carousel-items vertical-carousel vertical-carousel__container d-flex fd-column-md p-zero m-zero oy-auto p-relative disable-scrollbars fw-nowrap scrollable scrollable-y scrl-bhvr-auto gap-16" role="list" aria-label="{{ 'accessibility.slider' | t }}">
                   {%- liquid
                     if product.selected_or_first_available_variant.featured_media != null
                       assign thumb_index = thumb_index | plus: 1
                       assign featured_media = product.selected_or_first_available_variant.featured_media
                       assign current_ratio = ratio_thubnails
                       if ratio_thubnails == 'auto' or ratio_thubnails == 'adapt'
                         assign current_ratio = featured_media.aspect_ratio
                       endif
                       render 'product-slideshow-thumb', section: section, media: featured_media, product: product, place_holder: place_holder, thumb_index: thumb_index, ratio: current_ratio, object_fit: object_fit, media_background: media_background
                     endif
                     for media in product.media
                       assign thumb_index = thumb_index | plus: 1
                       unless media.id == product.selected_or_first_available_variant.featured_media.id
                         assign current_ratio = ratio_thubnails
                         if ratio_thubnails == 'auto' or ratio_thubnails == 'adapt'
                           assign current_ratio = media.aspect_ratio
                         endif
                         render 'product-slideshow-thumb', section: section, media: media, product: product, place_holder: place_holder, thumb_index: thumb_index, ratio: current_ratio, object_fit: object_fit, media_background: media_background
                       endunless
                     endfor
                   -%}
                  </div>
                  {%- if product.media.size > 4 -%}
                  <div class="product-slideshow__pagination carousel-controls--outside carousel-pagination d-none center-xs no-js-hidden js-carousel-pagination">
                    <div class="p-absolute carousel-controls--outside-btn carousel-controls--outside-btn-prev zi-2">
                      <button type="button" data-step="1" class="btn btn-primary--animate rtl-flip-x btn-small btn-icon btn-prev p-absolute js-carousel-prev-btn" aria-label="{{ 'accessibility.previous_slide' | t }}" name="previous">{% render 'icon-chevron-left' %}</button>
                    </div>
                    <div class="p-absolute carousel-controls--outside-btn carousel-controls--outside-btn-next zi-2">
                      <button type="button" data-step="1" class="btn btn-primary--animate rtl-flip-x btn-small btn-icon btn-next p-absolute js-carousel-next-btn" aria-label="{{ 'accessibility.next_slide' | t }}" name="next">{% render 'icon-chevron-right' %}</button>
                    </div>
                  </div>
                  {%- endif -%}
                </sht-vert-carousel>
              </div>
            {%- endif -%}
            <div class="product-slideshow__slider w-100 h-100 p-relative">
              <sht-prd-qck-vw-media-gallery class="product__media d-flex js-product-slideshow js-carousel-items o-hidden">
                {%- liquid
                  assign product_media_index = 1
                  assign is_first_image = false
                  assign has_valid_media = false
                  if product.media.size > 0
                    assign has_valid_media = true
                  endif
                  if has_valid_media
                    if product.selected_or_first_available_variant.featured_media != null
                      assign featured_media = product.selected_or_first_available_variant.featured_media
                      assign is_first_image = true
                      render 'product-slideshow-image', section: section, media: featured_media, is_first_image: is_first_image, product: product, place_holder: place_holder, product_media_index: product_media_index, is_first_item: true, rand: section_id, hide_variant_image: true, open_zoom_modal: false, ratio: ratio, force_eager: true, media_background: media_background
                    endif
                    for media in product.media
                      unless media.id == product.selected_or_first_available_variant.featured_media.id
                        if forloop.first and is_first_image == false
                          assign is_first_image = true
                        else
                          assign is_first_image = false
                        endif
                        assign product_media_index = product_media_index | plus: 1
                        render 'product-slideshow-image', section: section, media: media, is_first_image: is_first_image, product: product, place_holder: place_holder, product_media_index: product_media_index, is_first_item: forloop.first, rand: section_id, hide_variant_image: true, open_zoom_modal: false, ratio: ratio, force_eager: true, media_background: media_background
                      endunless
                    endfor
                  endif
                -%}
                {%- unless has_valid_media -%}
                  <sht-carousel-itm class="js-carousel-item carousel-item product-slideshow__item js-product-slideshow-item d-block" data-media-id="{{ section.id }}-placeholder" role="listitem" tabindex="-1">
                    {% liquid
                      if ratio == 'auto'
                        assign ratio = 1
                      endif
                    %}
                    <sht-prd-slideshow-itm class="w-100 h-100 o-hidden d-block-md" style="--ratio: {{ ratio }}">
                      <div class="quickview__placeholder w-100 h-100 d-flex middle-xs center-xs" style="background-color: {{ media_background }};">
                        {{ place_holder }}
                      </div>
                    </sht-prd-slideshow-itm>
                  </sht-carousel-itm>
                {%- endunless -%}
              </sht-prd-qck-vw-media-gallery>
              {% render 'product-thumbnail-horizoltal', 
                product: product, 
                section: section, 
                enable_thumbnail_mobile: 'd-block', 
                ratio_thubnails: ratio_thubnails, 
                object_fit: object_fit, 
                media_background: media_background 
              %}
            </div>
          </div>
        </sht-prd-slideshow>
      </div>
      <div class="quickview__line d-none d-block-sm"></div>
      <div class="quickview__product-info">
        <div class="quickview__product-info-content d-flex fd-column gap-24">
          <div class="quickview__title-section d-flex fd-column gap-8">
            <div class="product__title h3 m-zero">
              {{ product.title | escape }}
            </div>
            {% if settings.quick_buy_show_rating %}
              {% render 'product-rating', product: product, star_rating_color: false, quick_buy_star_rating_color: true %}
            {% endif %}
            <div class="d-flex middle-xs gap-12">
              <div class="product__price no-js-hidden d-flex gap-12 middle-xs" id="productQuickViewPrice-{{- section.id -}}" role="status">
              {%- render 'product-price', product: product, target: product.selected_or_first_available_variant, price_class: 'price--large', price_style: 'h5 mr-8' -%}
              {% if settings.quick_buy_show_sale_badge %}
                {% if product.selected_or_first_available_variant.compare_at_price > product.selected_or_first_available_variant.price %}
                  {%- liquid
                      assign discount_cost = product.selected_or_first_available_variant.compare_at_price | minus: product.selected_or_first_available_variant.price
                      assign discount_percent = discount_cost | times: 100.0 | divided_by: product.selected_or_first_available_variant.compare_at_price | round: 2
                    -%}
                  <div class="product__badge mt-8 mb-8">
                    <span class="sale-badge subtext d-inline-block p-relative fw-700">
                      <span class="p-relative zi-1">
                        {{- 'products.product.on_sale' | t }}
                        {{ discount_percent }}%
                      </span>
                    </span>
                  </div>
                {% endif %}
              {% endif %}
              </div>
            </div>
            {% if settings.show_shipping_policy %}
              <div class="d-flex fd-column gap-4">
                <p class="hide-empty subtext m-zero color-light">
                  {%- if cart.taxes_included -%}
                    <span>{{- 'products.product.include_taxes' | t -}}</span>
                  {%- endif -%}
                  {%- if shop.shipping_policy.body != blank -%}
                    <span class="product__shipping-policy-info text-block">
                      {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
                    </span>
                  {%- endif -%}
                </p>
              </div>
            {% endif %}
          </div>
          <div class="hide-empty fw-700 subtext" id="productQuickViewInventoryTracking-{{ section.id }}">
            {%- if product.selected_or_first_available_variant.inventory_quantity > 0 -%}
              {%- liquid
                assign stock_status = 'product--instock color-success'
                if settings.product_information_low_stock_threshold > 0 and settings.product_information_low_stock_threshold >= product.selected_or_first_available_variant.inventory_quantity
                  assign stock_status = 'product--lowstock'
                endif
              -%}
              <span class="{{ stock_status }}">
                {%- if settings.quick_buy_show_stock_number -%}
                  {{ 'products.product.in_stock_html' | t: stock: product.selected_or_first_available_variant.inventory_quantity }}
                {%- else -%}
                  {{ 'products.product.in_stock' | t }}
                {%- endif -%}
              </span>
            {%- else -%}
              {%- if product.selected_or_first_available_variant.inventory_policy != 'continue' and product.selected_or_first_available_variant.inventory_management != blank -%}
                <span class="product--outstock color-danger">
                  {{ 'products.product.out_of_stock' | t }}
                </span>
              {%- endif -%}
            {%- endif -%}
          </div>
          <span class="color-light hide-empty d-none" id="productQuickViewSelectedVariant-{{- section.id -}}">{{ product.selected_or_first_available_variant.title }}</span>
          {%- unless product.has_only_default_variant -%}
            {%- if settings.quick_buy_variant_picker_type == 'button' -%}
              <div class="product__variants js-variant-picker d-flex fd-column gap-20" id="productQuickViewVariantPicker-{{ section.id }}">
                {%- render 'product-variation', product: product, section: section, option_name: settings.option_name, class: 'js-variation-quick-view', subtext_class: 'subtext' -%}
                <sht-prd-qck-vw-variant-radios class="product__variants--radios d-flex fd-column gap-20 no-js-hidden" data-section="{{ section.id }}" data-url="{{ product.url }}">
                  {%- for option in product.options_with_values -%}
                    {% assign index = forloop.index | minus: 1 %}
                    <fieldset class="js-variant-radio-container form__fields product-option d-flex fw-wrap p-zero m-zero b-zero">
                        <legend class="p-zero product-option__name d-flex middle-xs gap-8 mb-8">
                        <span class="fw-700">{{ option.name }}</span>
                        <span class="flex-1 js-variant-radio-option-name subtext color-light hide-empty" data-option-name="{{ option.name }}">
                          {{ product.selected_or_first_available_variant.options[index] }}
                        </span>
                      </legend>
                      {%- assign variant_name = option.name | downcase -%}
                      {%- if variant_label == variant_name and settings.quick_buy_enable_variant_picker -%}
                        {% render 'card-product-quick-view-color-swatch', product: product, option: option, section: section, product_form_id: product_form_id, index: index %}
                      {%- else -%}
                        <ul class="ls-none d-flex fw-wrap gap-12">
                          {%- for value in option.values -%}
                            {% liquid
                              assign option_disabled = true
                              if value.available
                                assign option_disabled = false
                              endif
                            %}
  
                            <li class="form__field js-variant-option-value product-option__value
                              {% if option_disabled %} product-option--unavailable {% endif %}
                              {% if product.selected_or_first_available_variant.available == false and option.selected_value == value %}product-option--sold-out{% endif %}"
                              data-value="{{ value | escape }}-{{ index }}"
                              data-option-index="{{ index }}"
                            >
                              <input
                                type="radio"
                                class="js-variant-radio-item js-variant-item form__control input--variant subtext color-light visually-hidden"
                                id="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}"
                                name="{{ option.name }}"
                                value="{{ value | escape }}"
                                data-variant-value="{{ value | escape }}-{{ index }}"
                                form="{{ product_form_id }}"
                                data-option-value-id="{{ value.id }}"
                                {% if option.selected_value == value %}
                                  checked
                                {% endif %}
                              >
                              <label class="form__label product-option__label d-block js-variant-option-label" for="{{ section.id }}-{{ option.position }}-{{ forloop.index0 }}">{{ value }}</label>
                            </li>
                          {%- endfor -%}
                        </ul>
                      {%- endif -%}
                    </fieldset>
                  {%- endfor -%}
                  <script data-selected-variant type="application/json">{{ product.selected_or_first_available_variant | json }}</script>
                </sht-prd-qck-vw-variant-radios>
              </div>
            {%- else -%}
              <div class="product__variants js-variant-picker d-flex fd-column gap-20" id="productQuickViewVariantPicker-{{ section.id }}">
                  <sht-prd-qck-vw-variant-selects class="product__variants--selects d-flex fd-column gap-20 no-js-hidden" data-section="{{ section.id }}" data-url="{{ product.url }}">
                  {%- for option in product.options_with_values -%}
                    {%- liquid
                      assign index = forloop.index | minus: 1
                      assign variant_name = option.name | downcase
                      assign hide_select = ''
                    -%}
                    <div class="product-form__input product-form__input--dropdown js-selectbox-wrapper">
                        <label class="form__label d-inline-block p-zero m-zero product-option__name d-flex middle-xs gap-8 mb-8" for="Option-{{ section.id }}-{{ forloop.index0 }}">
                            <span class="fw-700">{{ option.name }}</span>
                            <span class="flex-1 js-variant-select-option-name subtext color-light hide-empty" data-option-index="{{ index }}" data-option-name="{{ option.name }}">
                              {{ product.selected_or_first_available_variant.options[index] }}
                          </span>
                      </label>
                      {%- if variant_label == variant_name and settings.quick_buy_enable_variant_picker -%}
                        <fieldset class="form__fields product-option js-variant-radio-container d-flex fw-wrap p-zero m-zero b-zero">
                          {% render 'quick-view-color-swatch-w-select', product: product, option: option, section: section, product_form_id: product_form_id, index: index %}
                        </fieldset>
                        {%- assign hide_select = "d-none-important" -%}
                      {%- endif -%}
                      <div class="{{ hide_select }} field__select p-relative p-zero">
                        <div class="field--animation">
                          <select id="Option-{{ section.id }}-{{ forloop.index0 }}" class="form__control w-100 h-100 field__text js-variant-select-item" name="options[{{ option.name | escape }}]" form="{{ product_form_id }}">
                            {% render 'product-variant-options', product: product, option: option, index: index %}
                          </select>
                        </div>
                        <span class="btn btn-large btn-icon p-absolute right-0 top-0 pe-none">
                          {% render 'icon-arrow-animation' %}
                        </span>
                      </div>
                    </div>
                  {%- endfor -%}
                  <script data-selected-variant type="application/json">{{ product.selected_or_first_available_variant | json }}</script>
                </sht-prd-qck-vw-variant-selects>
              </div>
            {%- endif -%}
          {%- endunless -%}
          {% if settings.show_product_description and product.description != blank %}
            <div class="quickview__description d-flex fd-column gap-8">
              {% if settings.collapsible_description %}
                {% capture accordion_icons %}
                  <span class="zi-1 btn btn-small btn-icon">
                    {% render 'icon-plus', class: 'accordion__icon--plus p-absolute' %}
                    {% render 'icon-minus', class: 'accordion__icon--minus p-absolute' %}
                  </span>
                {% endcapture %}
                <sht-accordion data-properties='{"multiple": true, "default_open": false }'>
                  <div class="js-accordion-item">
                    <div class="accordion__header">
                      <button class="btn-plain w-100 js-accordion-trigger d-flex middle-xs p-relative p-zero c-pointer between-xs" id="accordion-description-{{ section.id }}" aria-expanded="false" aria-controls="accordion-description-content-{{ section.id }}">
                        <span class="fw-700 fs-body">{{ 'products.product.description' | t }}</span>
                        <span class="accordion__toggle zi-1 d-flex">{{ accordion_icons }}</span>
                      </button>
                    </div>
                    <div class="js-accordion-content accordion-content rte" id="accordion-description-content-{{ section.id }}" role="region" aria-describedby="quickview-description-{{ section.id }}" tabindex="-1" style="max-height: 0;">
                      {{ product.description }}
                    </div>
                  </div>
                </sht-accordion>
              {% else %}
                <span class="fw-700 fs-body">{{ 'products.product.description' | t }}</span>
                <div class="product__description rte">
                  {{ product.description }}
                </div>
              {% endif %}
            </div>
          {% endif %}
          <div class="quickview__view-details">
            <a href="{{ product.url }}" class="btn btn-link ta-left">{{ 'products.product.view_product_details' | t }}</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="quickview__footer zi-3 w-100 p-sticky bottom-0 color-{{- settings.quick_buy_color_scheme }}">
    <sht-prd-qck-vw-frm class="product__form">
      {%- form 'product', product, id: product_form_id, class: 'form form__fields', novalidate: 'novalidate' -%}
        <div class="form__field">
          <input type="hidden" class="form__control" name="id" value="{{ product.selected_or_first_available_variant.id }}" disabled>
        </div>
        <div class="d-flex fd-column">
          <div class="js-product-form-error-wrapper" data-type="error-wrapper" role="alert" hidden>
            <span class="d-flex middle-xs mb-12">
              <span class="icon--error icon icon--small mr-8 fs-0">
                {%- render 'icon-error', size: 16 -%}
              </span>
              <span class="js-product-form-error-message" data-type="error-message"></span>
            </span>
          </div>
          <div class="d-flex between-xs middle-xs gap-16 fd-column fd-row-md {% unless settings.quick_buy_show_product_quantity %} end-md {% endunless %}">
            <div class="product__quantity {% unless settings.quick_buy_show_product_quantity %} d-none {% endunless %}" id="productQuickViewQuantity-{{ section.id }}">
              <label class="field__label d-none" for="productQuickViewQuantityInput-{{ section.id }}">{{ 'products.product.quantity.label' | t }}:</label>
              <sht-qty-inp class="field_quantity d-inline-flex middle-xs center-xs">
                <button class="no-js-hidden js-quantity-btn js-quantity-btn-minus btn btn-icon btn-small btn-plain" aria-label="{{ 'accessibility.minus' | t }}" name="minus" data-name="minus" type="button">
                  {%- render 'icon-minus', size: 20 -%}
                </button>
                <input
                  class="js-quantity-input qty-element input-number btn-plain b-zero ta-center"
                  type="number"
                  name="quantity"
                  aria-label="{{ 'products.product.quantity.input_label' | t: product: product.title | escape }}"
                  id="productQuickViewQuantityInput-{{ section.id }}"
                  min="1"
                  {%- if product.selected_or_first_available_variant.inventory_quantity > 1 and product.selected_or_first_available_variant.inventory_policy != 'continue' and product.selected_or_first_available_variant.inventory_management != blank -%}
                    max="{{- product.selected_or_first_available_variant.inventory_quantity -}}"
                  {%- endif -%}
                  value="1"
                  form="{{ product_form_id }}"
                >
                <button class="no-js-hidden js-quantity-btn js-quantity-btn-plus btn btn-icon btn-small btn-plain" aria-label="{{ 'accessibility.plus' | t }}" name="plus" data-name="plus" type="button">
                  {%- render 'icon-plus', size: 20 -%}
                </button>
              </sht-qty-inp>
            </div>
            <div class="quickview-form__buttons gap-16">
              <button type="submit" name="add"
                class="quickview-form__submit-btn js-product-form-submit-btn btn btn-small {% if settings.quick_buy_show_dynamic_checkout_buttons %} btn-secondary--animate {% else %} btn-primary--animate {% endif %}"
                {% if product.selected_or_first_available_variant.available == false %}
                  disabled
                {% endif %}>
                <span class="d-block o-hidden p-relative">
                  <span class="p-relative d-flex-important middle-xs center-xs ta-center {% if settings.quick_buy_show_dynamic_checkout_buttons %} btn-secondary__content {% else %} btn-primary__content {% endif %}">
                    <span class="hidden js-product-form-spinner product-form-spinner">
                      {% render 'icon-spinner' %}
                    </span>
                    <span class="js-product-form-submit-btn-text">
                      {%- if product.selected_or_first_available_variant.available -%}
                        {{ 'products.product.add_to_cart' | t }}
                      {%- else -%}
                        {{ 'products.product.sold_out' | t }}
                      {%- endif -%}
                    </span>
                  </span>
                </span>
              </button>
              {% if settings.quick_buy_show_dynamic_checkout_buttons %}
                {{ form | payment_button }}
              {% endif %}
            </div>
          </div>
        </div>
      {%- endform -%}
    </sht-prd-qck-vw-frm>
  </div>
</div>
{%- assign files = 'component-quickview.js' | split: ', ' -%}
<script>
  {%- for file in files -%}
    {%- assign id = file | replace: ".js", "-js" | strip | append: "-file" -%}
    {%- assign file_name = id | replace: "-", "_" -%}
    if (!SHTHelper.qs(`#{{ id }}`)) {
        let {{ file_name }} = document.createElement("script");
        {{ file_name }}.setAttribute('src', `{{ file | asset_url }}`);
        {{ file_name }}.setAttribute('id', '{{ id }}');
        document.body.appendChild({{ file_name }});
    }
  {%- endfor -%}
</script>
{% schema %}
{
  "name": "t:general.product_details",
  "tag": "section",
  "class": "section-product-quick-view"
}
{% endschema %}
