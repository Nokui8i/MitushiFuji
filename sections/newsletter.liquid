
{% if section.settings.image %}
  {%- liquid
    assign loading = "lazy"
    assign decoding ="async"
    assign fetchpriority = "auto"

    if section.index == 1
      assign loading = "eager"
      assign fetchpriority = "high"
    endif
    assign section_class ='p-relative d-flex middle-xs center-xs'
    assign section_style ='style="--mh-sm:50vh;--mh-md:50vh;--h-sm:50vh;--h-md:50vh;"'
    assign newsletter_form_class = ' s-text-pb '

    unless section.settings.section_mask_overlay_color.alpha == 0.0 or section.settings.section_mask_overlay_color == blank
      assign overlay_color =  '--color-page-bg-rgb:' | append: section.settings.section_mask_overlay_color.red | append: ',' | append: section.settings.section_mask_overlay_color.green | append: ',' | append: section.settings.section_mask_overlay_color.blue
    endunless
    unless section.settings.section_content_overlay_color.alpha == 0.0 or section.settings.section_content_overlay_color == blank
      assign content_color =  'color:' | append: section.settings.section_content_overlay_color
    endunless
    -%}
  {% capture newsletter_image %}
    {% liquid
      assign media_width_desktop = '100vw'
      if settings.enable_content_max_width
        assign media_width_desktop = 'calc(min(100vw, ' | append: settings.content_max_width | append: 'px))'
      endif
      assign widths = '240, 352, 550, 832, 1200, 1600, 1920, 2560, 3840'
      assign sizes = '(min-width: 769px) ' | append: media_width_desktop | append: ', ' | append: '100vw'

      assign alt_image = section.settings.image.alt | default: section.settings.image.image | split: '/' | last
      assign media_image = section.settings.image | image_url: width: section.settings.image.width | image_tag: widths: widths, sizes: sizes, alt: alt_image, class: 'js-image-lazy of-cover media w-100 h-100', loading: loading, fetchpriority: fetchpriority, decoding: decoding
    -%}
    <div class="sht-mask p-relative w-100 h-100 o-hidden" style="--overlay: {{ section.settings.image_overlay_opacity }}; {{ overlay_color }}">
      {% render 'image', image_item: media_image, image_wrap_classes: 'h-100', image_classes: 'h-100 js-animate anm anm-zoomOut' %}
    </div>
  {% endcapture %}
{% endif %}
{%- liquid
  assign content_align = section.settings.content_alignment
  assign section_id = section.id | md5 | truncate: 12, ""
  assign frm_id = section_id | prepend: 'newsletterForm-'
  assign fullwidth_banner_class = 'ctnr-banner'
  assign padding_banner_class = ''
  if section.settings.enable_fullwidth_banner == true
    assign fullwidth_banner_class = 'w-100'
  endif
  if section.settings.enable_fullwidth_banner == false
    assign padding_banner_class = 'banner-wrapper'
  endif
-%}
<div class="p-relative section content--special color-{{- section.settings.color_scheme }} {{ section_class }} {{ section.settings.remove_padding_top | replace: 'true', 'section-top-zero' | replace: section.settings.remove_padding_top, '' }} {{ section.settings.remove_padding_bottom | replace: 'true', 'section-bottom-zero' | replace: section.settings.remove_padding_bottom, '' }} {% render 'animation-loader', section: section %}" role="region" aria-labelledby="sectionHeading-{{ section_id }}" data-ui-component="Newsletter Section" {{ section_style }}>
  <div class="p-relative h-100 w-100 d-flex center-xs {{ fullwidth_banner_class }} {{ padding_banner_class }}">
    <div class="p-absolute h-100 w-100 left-0 top-0 {{ padding_banner_class }}">
      {{ newsletter_image }}
    </div>
    <div class="ctnr zi-1 w-100 h-10 p-relative d-flex fd-column center-xs banner-padding" style="{{ content_color }}">
      {% render 'section-header',
          classes: 's-header pb-0',
          subheading: section.settings.subheading,
          heading: section.settings.heading,
          description: section.settings.description,
          badge_text: section.settings.badge_text,
          badge_position: section.settings.badge_position,
          badge_shape: section.settings.badge_shape,
          badge_color: section.settings.badge_color,
          content_align: content_align,
          section: section
      %}
      <div class="s-footer-sm {{ newsletter_form_class }} clm {{ content_align }} js-animate anm anm-fadeInUp p-zero" style="--w-md:5; --duration: .6s; --delay: .9s;">
        {% render 'newsletter-form', form_id: frm_id , form_name: 'newsletterForm', content_align: content_align %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:general.newsletter",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:general.general"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:general.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "enable_fullwidth_banner",
      "label": "t:general.enable_fullwidth_banner",
      "default": true
    },
    {
      "type": "range",
      "unit": "%",
      "max": 90,
      "min": 0,
      "step": 1,
      "default": 30,
      "id": "image_overlay_opacity",
      "label": "t:general.mask_overlay_opacity"
    },
    {
      "type": "color",
      "id": "section_mask_overlay_color",
      "label": "t:general.mask_overlay",
      "info": "t:general.applies_when_using_background_image_info",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "section_content_overlay_color",
      "label": "t:general.text_overlay",
      "info": "t:general.applies_when_using_background_image_info",
      "default": "#FFFFFF"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "t:general.section_subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:general.section_heading",
      "default": "Newsletter"
    },
    {
      "type": "text",
      "id": "description",
      "label": "t:general.section_description",
      "default": "Write a short sentence about what customers can expect from subcribing your newsletter."
    },
    {
      "type": "header",
      "content": "t:general.layout"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "t:general.content_alignment",
      "default": "ta-center m-auto",
      "options": [
        {
          "value": "ta-left",
          "label": "t:general.left"
        },
        {
          "value": "ta-center m-auto",
          "label": "t:general.center"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "remove_padding_top",
      "label": "t:general.remove_padding_top",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "remove_padding_bottom",
      "label": "t:general.remove_padding_bottom",
      "default": true
    },
    {
      "type": "header",
      "content": "t:general.image"
    },
    {
      "type": "image_picker",
      "label": "t:general.background_image",
      "id": "image"
    },
    {
      "type": "header",
      "content": "t:general.prominent_badge"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "t:general.text",
      "info": "t:general.prominent_badge_text_info"
    },
    {
      "type": "select",
      "id": "badge_color",
      "label": "t:general.accent_scheme",
      "default": "color-accent-1",
      "visible_if": "{{ section.settings.badge_text != blank }}",
      "options": [
        {
          "value": "color-accent-1",
          "label": "t:general.main"
        },
        {
          "value": "color-accent-2",
          "label": "t:general.extra"
        }
      ]
    },
    {
      "type": "select",
      "id": "badge_position",
      "label": "t:general.position",
      "default": "p-badge--top-right",
      "visible_if": "{{ section.settings.badge_text != blank }}",
      "options": [
        {
          "value": "p-badge--top-left",
          "label": "t:general.left"
        },
        {
          "value": "p-badge--top-right",
          "label": "t:general.right"
        }
      ]
    },
    {
      "type": "select",
      "id": "badge_shape",
      "label": "t:general.shape",
      "default": "badge--star",
      "visible_if": "{{ section.settings.badge_text != blank }}",
      "options": [
        {
          "value": "badge--star",
          "label": "t:general.star"
        },
        {
          "value": "badge--diamond",
          "label": "t:general.diamond"
        },
        {
          "value": "badge--asterisk",
          "label": "t:general.asterisk"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:general.newsletter"
    }
  ]
}
{% endschema %}