{%- liquid
  assign size_placeholder = '--size: 120px' | replace: '12', section.settings.items_per_row_mobile | replace: '6', '8'
  assign placeholder = 'blog-apparel-3' | placeholder_svg_tag: 'js-image-lazy placeholder media w-100 h-100 of-cover'
  assign w_md = 12 | times: 1 | divided_by: section.settings.items_per_row_on_desktop
-%}
<div class="section color-{{ section.settings.color_scheme }} {{ section.settings.remove_padding_top | replace: 'true', 'section-top-zero' | replace: section.settings.remove_padding_top, '' }} {{ section.settings.remove_padding_bottom | replace: 'true', 'section-bottom-zero' | replace: section.settings.remove_padding_bottom, '' }} {% render 'animation-loader', section: section %}" data-ui-component="Brand List Section" role="region" aria-labelledby="sectionHeading-{{ section.id | md5 | truncate: 12, "" }}">
  <div class="ctnr">
    {% render 'section-header',
      content_align: 'ta-left',
      subheading: section.settings.subheading,
      heading: section.settings.heading,
      description: section.settings.description,
      section: section
    %}
    <div class="s-content logo-list {{ section.settings.accent_scheme }}">
      <div class="rw gap-unequal middle-xs ta-center js-animate">
        {% for block in section.blocks %}
          {%- liquid
            assign loading = "lazy"
            assign decoding ="async"
            assign fetchpriority = "auto"

            if section.index == 1 and forloop.first
              assign loading = "eager"
              assign fetchpriority = "high"
            endif

            assign widths = '240, 352'
            assign media_width_desktop = 'calc(100vw / ' | append: section.settings.items_per_row_on_desktop | append: ')'

            if settings.enable_content_max_width
              assign media_width_desktop = 'calc(min(100vw, ' | append: settings.content_max_width | append: 'px) / ' | append: section.settings.items_per_row_on_desktop | append: ')'
            endif

            assign sizes = '(min-width: 769px) ' | append: media_width_desktop | append: ', ' | append: '100vw'

            assign media = placeholder
            assign media_alt  = block.settings.logo.alt | default: block.settings.logo.image | split: '/' | last
            assign media = block.settings.logo | image_url: width: block.settings.logo.width | image_tag: widths: widths, sizes: sizes, alt: media_alt, class: 'js-image-lazy of-contain media w-100 h-100', loading: loading, fetchpriority: fetchpriority, decoding: decoding
          -%}
          <div {{ block.shopify_attributes }} class="clm anm anm-fadeInUp" style="--w-xs:{{ section.settings.items_per_row_mobile }};--w-sm:6;--w-md:{{ w_md }};--delay: {{ forloop.index | times: 0.05 -}}s; --duration: .6s">
            <div class="p-relative d-inline-block" style="{{ size_placeholder }}">
              <a target="_blank" href="{{ block.settings.logo_link | default: '#' }}" class="d-block p-absolute w-100 h-100 zi-1 hide-no-link" aria-label="{{ block.settings.logo.alt }}"></a>
              {% render 'image', image_item: media, ratio: block.settings.logo.aspect_ratio %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

