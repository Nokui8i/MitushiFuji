  flex-direction: column !important;
  gap: 4px !important; /* רווח מינימלי בין thumbnails */
}

/* Prevent items from stretching to fill height */
/* מונע מה-thumbnails להתמתח כדי למלא גובה */
.product-slideshow__thumbs.vertical-carousel__container > *,
.product-slideshow__thumbs > * {
  flex: 0 0 auto !important;
}

/* Guaranteed spacing between thumbnails */
/* רווח מובטח בין thumbnails - margin-bottom */
.product-slideshow__thumbs.vertical-carousel__container .product-slideshow__thumb {
  margin-bottom: 4px !important;
  padding: 0 !important;
