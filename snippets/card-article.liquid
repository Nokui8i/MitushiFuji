{% liquid
    assign loading = "lazy"
    assign decoding ="async"
    assign fetchpriority = "auto"

    if section.index == 1 and is_first and force_eager == false
      assign loading = "eager"
      assign fetchpriority = "high"
    endif

    if is_first and force_eager == true
      assign loading = "eager"
      assign fetchpriority = "high"
    endif

  assign widths = '240, 352, 550, 832, 1200, 1600, 1920, 2560, 3840'
  assign sizes = "auto, (min-width: 769px) 100vw, 100vw"
  assign article_placeholder = 'blog-apparel-1' | placeholder_svg_tag: 'js-image-lazy placeholder media of-cover'
  assign article_image = article_placeholder
  assign article_image = article.image.src | image_url: width: article.image.width | image_tag: widths: widths, sizes: sizes, alt: article.title, class: 'js-image-lazy media of-cover w-100', loading: loading, fetchpriority: fetchpriority, decoding: decoding
  assign show_blog_tag = show_blog_tag | default: false

  assign ratio = image_ratio
  if image_ratio == 'auto'
    assign ratio = article.image.aspect_ratio
  endif
%}
<div class="card w-100">
  <a href="{{ article.url }}" class="card__media d-none {{ show_image | replace: true, 'd-block' }}">
    {% render 'image', ratio: ratio, image_item: article_image %}
  </a>
  <div class="card__content card__content--outer">
    <ul class="ls-none mb-12 r-gap-16 c-gap-8 fw-wrap d-none {{ show_blog_tag | default: '' | replace: 'true', 'd-flex' }}">
      {% for tag in article.tags %}
        <li>
          {{ tag | link_to_tag: tag | replace: '<a', '<a class="tag"' }}
        </li>
      {% endfor %}
    </ul>
    <h3 class="mb-12 h5">
      <a href="{{ article.url }}">{{ article.title }}</a>
    </h3>
    <div class="hide-empty mb-8 subtext color-light">
      <span class="d-none {{ show_author | replace: true, 'd-inline-block' }}">{{ 'sections.featured_blog.article.by_author' | t: author: article.author }}</span>
      {% if show_author and show_published_date %}
        {{ 'sections.featured_blog.article.in_date' | t }}
      {% endif %}
        <span class="d-none {{ show_published_date | replace: true, 'd-inline-block' }}">{{ article.published_at | date: format: 'abbreviated_date' }}</span>
    </div>
    {% if show_excerpt %}
      {%- if article.excerpt.size > 0 or article.content.size > 0 -%}
        <p class="card__excerpt o-hidden mb-8 hide-empty">
          {%- if article.excerpt.size > 0 -%}
            {{- article.excerpt | strip_html | truncatewords: 30 -}}
          {%- else -%}
            {{- article.content | strip_html | truncatewords: 30 -}}
          {%- endif -%}
        </p>
      {%- endif -%}
    {%- endif -%}
    <a href="{{ article.url }}" class="btn mt-8 btn-link {{ show_read_more | default: 'd-none-important' | replace: 'true', '' }}">
      {{ 'blogs.article.read_more' | t }}
      <span class="visually-hidden"> {{ article.title }}</span>
    </a>
  </div>
</div>
