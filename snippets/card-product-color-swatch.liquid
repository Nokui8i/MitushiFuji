{%-liquid
  assign widths = '240, 352'
  assign sizes = "auto, (min-width: 769px) 240px, 240px"
  assign variant_label = settings.variant_swatches_option | downcase | default: 'color'
-%}
<sht-variant-swtch class="variant-swatchs hide-empty d-flex fw-wrap middle-xs no-js-hidden gap-8 pb-4">
  {%- unless product.has_only_default_variant -%}
    {%- for option in product.options_with_values -%}
      {%- liquid
        assign variant_name = option.name | downcase
      -%}
      {%- if variant_label == variant_name -%}
        {%- for value in option.values limit: 4 -%}
          {%-liquid
            assign variant_img = ''
            for variant in product.variants
              if variant.title contains value and variant.image
                assign variant_img = variant.image | image_url: width: variant.image.width | image_tag: widths: widths, sizes: sizes, alt: variant.title, data_url: variant.url
                assign variant_img = variant_img | prepend: '<template>' | append: '</template>'
                break
              endif
            endfor

            assign swatch_value = null
            if value.swatch.color != blank or value.swatch.image != blank
              if value.swatch.image
                assign swatch_value = value.swatch.image | image_url
              elsif value.swatch.color
                assign swatch_value = value.swatch.color
              else
                assign swatch_value = null
              endif
            endif
          -%}
          <button class="vs__item clr-swh__type js-variant-swatch-item p-relative has-tooltip c-pointer" aria-controls="{{ image_id }}" data-product-link-class="{{ product_link_class }}" data-product-image-id="{{ product_image_id }}" data-option-value="{{ value | downcase | escape | remove: " " }}" data-swatch-option-value="{{ swatch_value }}" title="{{ value | escape }}" aria-label="{{ 'products.product.media.view_color_swatch' | t: color_swatch_name: value, product_name: product.title }}" type="button">
            {{- variant_img -}}
            <span class="tooltip tooltip__text tooltip--top p-absolute" aria-hidden="true">{{- value | escape -}}</span>
          </button>
        {%- endfor -%}
        {%- if option.values.size > 4 -%}
          +{{ option.values.size | minus: 4 -}}
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}
  {%- endunless -%}
</sht-variant-swtch>

